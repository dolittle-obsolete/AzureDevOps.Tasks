{
    "manifestVersion": 1,
    "id": "tasks",
    "name": "Dolittle Pipeline Tasks",
    "version": "0.0.1",
    "links": {
        "repository": {
            "uri": "https://github.com/dolittle-tools/AzureDevOps.Tasks"
        },
        "issues": {
            "uri": "https://github.com/dolittle-tools/AzureDevOps.Tasks/issues"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/dolittle-tools/AzureDevOps.Tasks"
    },
    "publisher": "Dolittle",
    "public": false,
    "description": "Tools for building/releasing with Dolittle.",
    "categories": [
        "Azure Pipelines"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "content": {
        "license": {
            "path": "LICENSE"
        },
        "details": {
            "path": "overview.md"
        }
    },
    "icons": {
        "default": "Images/dolittle_red_white_logo_256px.png"        
    },
    "files": [
        {
            "path": "BuildTasks/CurrentVersion"
        },
        {
            "path": "BuildTasks/UpdateVersion"
        }
    ],
    "contributions": [
        {
            "id": "CurrentVersion",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "BuildTasks/CurrentVersion"
            }
        },
        {
            "id": "UpdateVersion",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "BuildTasks/UpdateVersion"
            }
        }
    ]
}